<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <!-- 设置mybatis输出日志 -->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!-- 设置别名 -->
    <typeAliases>
        <!-- name:实体类所在的包名 -->
        <package name="com.bwj.entity"/>
    </typeAliases>
    <mappers>
        <!--name:包名,包种所有mapper.xml文件依次都能加载-->
        <package name="com.bwj.dao"/>
    </mappers>
</configuration>